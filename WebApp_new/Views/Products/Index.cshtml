@model IEnumerable<WebApp_new.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1 class="mt-3">Index of products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<hr />

@*    <tbody>*@
    <div class="container d-flex flex-wrap">
@foreach (var item in Model) {
        <div class="card me-3 mb-3" style="width: 18rem;">
         <img src="https://picsum.photos/200" class="card-img-top" alt="...">
         <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <h5 class="card-text text-danger">@Html.DisplayFor(modelItem => item.Price) SEK</h5>
            <a href="#" class="btn btn-primary mb-2">Köp</a><br>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </div>
    </div>    
}
    </div>    
</div>